<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NovaSolicitacaoActivity">
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                card_view:cardElevation="8dp"
                app:cardCornerRadius="5dp"
                android:background="#ffffff">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dados da solicitação"
                        android:textSize="20dp"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                app:cardCornerRadius="5dp"
                card_view:cardElevation="9dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/round_border">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_departamento"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:background="@drawable/round_border">

                        <Spinner
                            android:id="@+id/deparments_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="15dp"
                            android:background="@drawable/spinner">

                        </Spinner>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_equipment"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:background="@drawable/round_border">

                        <Spinner
                            android:id="@+id/equipments_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="15dp"
                            android:background="@drawable/spinner">

                        </Spinner>

                    </LinearLayout>

                        <customfonts.EditText_Roboto_Regular
                            android:id="@+id/solicitacao_motivo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#00000000"
                            android:hint="MOTIVO"
                            android:layout_marginTop="18dp"
                            android:layout_marginLeft="18dp"
                            android:layout_marginRight="18dp"
                            android:padding="15dp"
                            android:textSize="13dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:background="#c1c1c1">
                    </LinearLayout>

                    <customfonts.EditText_Roboto_Regular
                        android:id="@+id/solicitacao_descricao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:hint="DESCRIÇÃO"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:padding="15dp"
                        android:textSize="13dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="18dp"
                        android:background="#c1c1c1">
                    </LinearLayout>


                    <CheckBox
                        android:id="@+id/solicitacao_notificacao"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="   Notificar quando sofrer alterações"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"/>

                    <customfonts.MyTextView_Roboto_Medium
                        android:id="@+id/solicitacao_salvar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Adicionar Solicitação"
                        android:textAllCaps="false"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="18dp"
                        android:textColor="#ffffff"
                        android:padding="15dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:background="@drawable/rounded_button"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>